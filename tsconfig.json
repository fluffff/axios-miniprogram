{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["ESNext"],
    "target": "es2015",
    "module": "ESNext",
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./src",
    "./test",
    "./rollup.config.ts",
    "./vitest.config.ts",
    "./global.d.ts",
    "./global.variables.d.ts"
  ],
  "exclude": ["node_modules", "**/*.md", "**/dist"]
}
